.row
  .col-md-12(collapse="notFilter")
    include person_filter
  .col-md-12
    button.btn.btn-default.btn-block.btn-xs(ng-click="notFilter = !notFilter")=__('FILTER')
.row
  .col-md-12
    .row
      .col-md-3(ng-repeat="person in dataList.data")
        .thumbnail
          .caption
            p {{ person.name }} 

            button.btn.btn-primary.btn-sm.icon.icon-edit(type='button', ng-click='selectPerson($index); share.window("createOrUpdatePerson");')=__('Edit')
            | 
            button.btn.btn-danger.btn-sm.icon.icon-trash(type='button', ng-click='destroyPersonByIndex($index); queryPerson();')=__('Remove')
            | 
            button.btn.btn-info.btn-sm.icon.icon-plus(type='button', ng-click='selectPerson($index); share.window("showPerson");')=__('Show')
.row
  .col-md-12.text-right
    p=__('Listing {{ dataList.status.listing }} of {{ dataList.status.filtered }} filtered on {{ dataList.status.totality }} registers')
  .col-md-12
    button.btn.btn-default.btn-lg.btn-block(ng-click='queryMorePerson(); countPerson();')=__('MORE')